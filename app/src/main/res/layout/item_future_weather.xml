<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vIvItemWeatherCondition"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_margin="@dimen/dp_18"
        tools:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/vTvItemTemperature"
        style="@style/DefaultBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLength="7"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
        tools:text="+23 C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_18"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vTvItemWeatherDescription"
            style="@style/FutureWeatherItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="Overcast clouds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                style="@style/FutureWeatherItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:text="@string/sunrise" />

            <TextView
                android:id="@+id/vTvItemSunrise"
                style="@style/FutureWeatherItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                tools:text="07:10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                style="@style/FutureWeatherItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="7"
                android:text="@string/sunset" />

            <TextView
                android:id="@+id/vTvItemSunset"
                style="@style/FutureWeatherItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                tools:text="21:50" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>